{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es6",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "paths": {
      "@logger": ["src/common/logger"],
      "@entities": ["src/common/entities"],
      "@config/*": ["src/config/*"],
      "@common/*": ["src/common/*"],
      "@utils/*": ["src/common/utils/*"]
    },
    "typeRoots": ["src/types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/tests"
  ]
}
