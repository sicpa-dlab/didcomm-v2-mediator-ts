{
  "name": "cloud-agent",
  "version": "0.0.1",
  "description": "Cloud Agent Mediator service based on NestJs",
  "author": "Alexander Shenshin",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "style:check": "prettier --check \"src/**/*.ts\"",
    "style:fix": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "watch": "nodemon --config nodemon.json",
    "debug": "nodemon --config nodemon-debug.json",
    "migration:create": "npx mikro-orm migration:create",
    "migration:up": "npx mikro-orm migration:up",
    "migration:down": "npx mikro-orm migration:down",
    "migration:list": "npx mikro-orm migration:list",
    "migration:pending": "npx mikro-orm migration:pending",
    "schema:drop": "npx mikro-orm schema:drop",
    "test": "jest --runInBand --testTimeout=60000",
    "test:watch": "jest --watch --runInBand --testTimeout=60000",
    "test:cov": "jest --coverage --runInBand --testTimeout=60000",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand --testTimeout=60000"
  },
  "dependencies": {
    "@mikro-orm/core": "^4.4.3",
    "@mikro-orm/migrations": "^4.4.3",
    "@mikro-orm/nestjs": "^4.2.0",
    "@mikro-orm/postgresql": "^4.4.3",
    "@nestjs/common": "^7.6.12",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.12",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.12",
    "@nestjs/swagger": "^4.7.13",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "copyfiles": "^2.4.1",
    "mime-types": "^2.1.29",
    "module-alias": "^2.2.2",
    "nestjs-config": "^1.4.7",
    "nestjs-mikro-orm": "^1.0.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pino": "^6.11.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6",
    "type-zoo": "^3.4.1",
    "typescript": "^4.1.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^4.4.3",
    "@nestjs/testing": "^7.6.12",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^14.14.30",
    "@types/passport-jwt": "^3.0.4",
    "@types/pino": "^6.3.6",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "pino-pretty": "https://github.com/kgoncharov/pino-pretty/tarball/d083553e4bbc552f917452d7722e248f847fa5b0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "_moduleAliases": {
    "@common": "src/common",
    "@config": "src/config",
    "@entities": "src/common/entities",
    "@logger": "src/common/logger",
    "@utils": "src/common/utils"
  },
  "mikro-orm": {
    "useTsNode": true
  }
}
